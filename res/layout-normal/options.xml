<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/QueGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/turkish"
            android:layout_marginTop="2dp"
            android:checked="false"
            android:drawableRight="@drawable/turkey" />

        <RadioButton
            android:id="@+id/english"
            android:layout_marginTop="2dp"
            android:checked="false"
            android:drawableRight="@drawable/england" />

        <RadioButton
            android:id="@+id/deutsch"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:checked="false"
            android:drawableRight="@drawable/germany" />

        <RadioButton
            android:id="@+id/azerbaycanca"
            android:layout_marginTop="2dp"
            android:checked="false"
            android:drawableRight="@drawable/azerbaijan" />

        <RadioButton
            android:id="@+id/arapca"
            android:layout_marginTop="2dp"
            android:checked="false"
            android:drawableRight="@drawable/arableague" />

        <RadioButton
            android:id="@+id/farsca"
            android:layout_marginTop="2dp"
            android:checked="false"
            android:drawableRight="@drawable/iran" />
    </RadioGroup>

</HorizontalScrollView>